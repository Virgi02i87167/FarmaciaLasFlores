@model FarmaciaLasFlores.Models.Roles

@{
	ViewData["Title"] = "Editar Rol";
}

<h2 class="mb-4">Editar Rol</h2>

<form asp-action="Edit" method="post" class="w-50">
	<input type="hidden" asp-for="Id" />

	<div class="mb-3">
		<label asp-for="NombreRoles" class="form-label">Nombre del Rol</label>
		<input asp-for="NombreRoles" class="form-control" required />
		<span asp-validation-for="NombreRoles" class="text-danger"></span>
	</div>

	<div class="d-flex justify-content-between mt-4">
		<button type="submit" class="btn btn-primary">Guardar Cambios</button>
		<a asp-action="Index" class="btn btn-outline-secondary">Volver al Listado</a>
	</div>
</form>
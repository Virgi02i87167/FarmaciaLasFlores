@model FarmaciaLasFlores.Models.VentasViewModel

@{
    ViewData["Title"] = "Productos Disponibles y Ventas Realizadas";
}

<h2 class="text-center mb-4">Productos Disponibles</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<!-- Mostrar Productos -->
<table class="table table-bordered table-striped table-hover shadow-sm">
    <thead class="table-light">
        <tr>
            <th>Nombre</th>
            <th>Cantidad</th>
            <th>Precio</th>
            <th>Tipo Medicamento</th>
            <th>Fecha Registro</th>
            <th>Acción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model.ListaProductos)
        {
            <tr>
                <td>@producto.Nombre</td>
                <td>@producto.Cantidad</td>
                <td>@producto.Precio</td>
                <td>@producto.TipoMedicamento</td>
                <td>@producto.FechaRegistro.ToString("dd/MM/yyyy")</td>
                <td>
                    <form method="post" asp-action="AddToCart">
                        <input type="hidden" name="ProductoId" value="@producto.Id" />
                        <button type="submit" class="btn btn-primary">Agregar al Carrito</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />

<h2 class="text-center mb-4">Ventas Realizadas</h2>

 
<!-- agregando campos filtrar ventas por fecha, cliente y producto -->
<form method="get" asp-action="BuscarVentas">
    <div class="form-row align-items-center">
        <div class="col-auto">
            <label class="sr-only" for="fechaInicio">Fecha Inicio</label>
            <input type="date" class="form-control mb-2" id="fechaInicio" name="fechaInicio" placeholder="Fecha Inicio">
        </div>
        <div class="col-auto">
            <label class="sr-only" for="fechaFin">Fecha Fin</label>
            <input type="date" class="form-control mb-2" id="fechaFin" name="fechaFin" placeholder="Fecha Fin">
        </div>
        <div class="col-auto">
            <label class="sr-only" for="clienteId">Cliente</label>
            <select class="form-control mb-2" id="clienteId" name="clienteId">
                <option value="">Seleccionar Cliente</option>
                <!-- Aquí puedes agregar opciones dinámicamente desde tu base de datos -->
            </select>
        </div>
        <div class="col-auto">
            <label class="sr-only" for="productoId">Producto</label>
            <select class="form-control mb-2" id="productoId" name="productoId">
                <option value="">Seleccionar Producto</option>
                <!-- Aquí puedes agregar opciones dinámicamente desde tu base de datos -->
            </select>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary mb-2">Buscar</button> <!--Boton buscar¡-->
        </div>
    </div>
</form>


<!-- Mostrar Ventas -->
@if (Model.ListaVentas.Any())
{
    <table class="table table-bordered table-striped table-hover shadow-sm">
        <thead class="table-light">
            <tr>
                <th>Fecha de la Venta</th>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var venta in Model.ListaVentas)
            {
                <tr>
                    <td>@venta.FechaVenta.ToString("dd/MM/yyyy")</td>
                    <td>@venta.Producto.Nombre</td>
                    <td>@venta.Cantidad</td>
                    <td>@venta.PrecioVenta</td>
                    <td>@venta.Total</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No se han registrado ventas aún.</p>
}


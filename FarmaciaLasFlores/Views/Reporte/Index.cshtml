
@{
    ViewData["Title"] = "Reporte";
}

<div class="container mt-5">
    <div class="d-flex justify-content-center gap-3">
        <a asp-action="Productos" class="btn btn-custom-primary btn-lg">Reporte Productos</a>
        <a asp-action="Ventas" class="btn btn-custom-primary btn-lg">Reporte Ventas</a>
    </div>
</div>

<style>
    body {
        background-color: #ede6e9;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #171d18;
        margin: 0;
    }

    /* Definiendo la paleta de colores personalizada */
    :root {
        --primary-color: #0d6efd; /* Color principal */
        --secondary-color: #6c757d; /* Color secundario */
        --danger-color: #dc3545; /* Color de error o peligro */
        --success-color: #28a745; /* Color de éxito */
    }

    /* Estilos para los botones */
    .btn-custom-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
        color: white;
    }

        .btn-custom-primary:hover {
            background-color: #0056b3; /* Color más oscuro al hacer hover */
            border-color: #004085;
        }

        .btn-custom-primary:focus, .btn-custom-primary:active {
            background-color: #004085; /* Color al hacer click */
            border-color: #003366;
        }

    /* Añadiendo sombra y radio a los botones */
    .btn-custom-primary {
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Para botones grandes */
    .btn-lg {
        padding: 12px 24px;
        font-size: 1.2rem;
    }
</style>
@model FarmaciaLasFlores.Models.PasswordResetViewModel

<style>
    body {
        background-color: #ede6e9; /* Fondo suave */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #171d18; /* Color del texto */
        margin: 0;
    }

    .container {
        padding-top: 50px;
    }

    .card {
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 2rem;
    }

    h3.card-title {
        color: #1b3488; /* Título con el azul oscuro */
    }

    .form-control {
        border-radius: 8px;
        padding: 0.75rem 1rem;
        border: 1px solid #e0e0e0;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: #1b3488; /* Cambio de borde a azul oscuro al hacer foco */
            box-shadow: 0 0 5px rgba(27, 52, 136, 0.5);
        }

    .btn-primary {
        background-color: #1b3488;
        border-color: #1b3488;
        font-size: 1.1rem;
        padding: 1rem;
        border-radius: 8px;
    }

        .btn-primary:hover {
            background-color: #7583a0; /* Azul más claro para hover */
            border-color: #7583a0;
        }

    .alert-info {
        background-color: #e77b85; /* Rojo suave */
        color: #171d18;
        border-radius: 6px;
        font-weight: bold;
    }
</style>


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow rounded-4">
                <div class="card-body p-4">
                    <h3 class="card-title text-center mb-4">Recuperar Contraseña</h3>
                    <form method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">Correo Electrónico</label>
                            <input type="email" name="Email" id="email" class="form-control" placeholder="ejemplo@correo.com" required>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Enviar Enlace</button>
                        </div>
                    </form>
                    @if (!string.IsNullOrEmpty(ViewBag.Message as string))
                    {
                        <div class="alert alert-info mt-3 text-center">@ViewBag.Message</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

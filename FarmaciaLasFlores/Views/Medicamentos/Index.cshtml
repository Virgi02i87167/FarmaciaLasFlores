@model FarmaciaLasFlores.Models.MedicamentosViewModel

@{
    ViewData["Title"] = "Home Page";
}

<h1>Tipo de Medicamentos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar Nuevo</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Tipo de Medicamento</th>
            <th>Acciones</th> <!--Nueva columna-->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListaMedicamentos)
        {
            <tr>
                <td>@item.TipoMedicamento</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

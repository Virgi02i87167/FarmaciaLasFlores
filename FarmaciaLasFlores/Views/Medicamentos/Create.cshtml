@model FarmaciaLasFlores.Models.MedicamentosViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">
        @(ViewContext.RouteData.Values["action"].ToString() == "Create" ? "Crear" : "Editar") Categorías
    </h1>

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg">
                <div class="card-body">
                    <form asp-action="Create">
                        <!-- Mensajes de validación -->
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Campo para Tipo de Medicamento -->
                        <div class="mb-3">
                            <label asp-for="NuevoMedicamento.TipoMedicamento" class="form-label">Tipo de Medicamento</label>
                            <input asp-for="NuevoMedicamento.TipoMedicamento" class="form-control" required />
                            <span asp-validation-for="NuevoMedicamento.TipoMedicamento" class="text-danger small"></span>
                        </div>

                        <!-- Botón de Enviar -->
                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-2"></i> Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Enlace para volver a la lista -->
    <div class="mt-4 text-center">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i> Volver a la lista
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

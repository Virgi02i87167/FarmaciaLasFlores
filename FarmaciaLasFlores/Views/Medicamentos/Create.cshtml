@model FarmaciaLasFlores.Models.MedicamentosViewModel

@{
    ViewData["Title"] = "Create";
}

<style>
    body {
        background-color: #ede6e9;
    }

    h1 {
        color: #1b3488;
        font-weight: bold;
    }

    .card {
        border: none;
        border-radius: 1rem;
        background-color: #fff;
    }

    .form-label {
        color: #171d18;
        font-weight: 500;
    }

    .form-control {
        border: 1px solid #ccc;
        border-radius: 0.5rem;
    }

        .form-control:focus {
            border-color: #7583a0;
            box-shadow: 0 0 0 0.2rem rgba(117, 131, 160, 0.25);
        }

    .btn-primary {
        background-color: #25a152;
        border-color: #25a152;
    }

        .btn-primary:hover {
            background-color: #1b3488;
            border-color: #1b3488;
        }

    .btn-outline-secondary {
        color: #c43f48;
        border-color: #c43f48;
    }

        .btn-outline-secondary:hover {
            background-color: #e77b85;
            color: #fff;
            border-color: #e77b85;
        }

    .text-danger {
        font-size: 0.9rem;
    }

    .card-body {
        padding: 2rem;
    }
</style>

<div class="container mt-5">
    <h1 class="text-center mb-4">
        @(ViewContext.RouteData.Values["action"].ToString() == "Create" ? "Crear" : "Editar") Categorías
    </h1>

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg">
                <div class="card-body">
                    <form asp-action="Create">
                        <!-- Mensajes de validación -->
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Campo para Tipo de Medicamento -->
                        <div class="mb-3">
                            <label asp-for="NuevoMedicamento.TipoMedicamento" class="form-label">Tipo de Medicamento</label>
                            <input asp-for="NuevoMedicamento.TipoMedicamento" class="form-control" required />
                            <span asp-validation-for="NuevoMedicamento.TipoMedicamento" class="text-danger small"></span>
                        </div>

                        <!-- Botón de Enviar -->
                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-2"></i> Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Enlace para volver a la lista -->
    <div class="mt-4 text-center">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i> Volver a la lista
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

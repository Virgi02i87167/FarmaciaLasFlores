@model FarmaciaLasFlores.Models.MedicamentosViewModel

@{
    ViewData["Title"] = "Editar Tipo de Medicamento";
}

<style>
    body {
        background-color: #ede6e9;
    }

    h2 {
        color: #1b3488;
        font-weight: 600;
    }

    .card {
        background-color: #fff;
        border: none;
        border-radius: 1rem;
    }

    .form-label {
        color: #171d18;
        font-weight: 500;
    }

    .form-control {
        border: 1px solid #ccc;
        border-radius: 0.5rem;
    }

        .form-control:focus {
            border-color: #7583a0;
            box-shadow: 0 0 0 0.2rem rgba(117, 131, 160, 0.25);
        }

    .btn-primary {
        background-color: #1b3488;
        border-color: #1b3488;
    }

        .btn-primary:hover {
            background-color: #7583a0;
            border-color: #7583a0;
        }

    .btn-outline-secondary {
        color: #c43f48;
        border-color: #c43f48;
    }

        .btn-outline-secondary:hover {
            background-color: #e77b85;
            color: white;
            border-color: #e77b85;
        }

    .card-body {
        padding: 2rem;
    }
</style>

<div class="container mt-5">
    <h2 class="text-center mb-4">Editar Tipo de Medicamento</h2>

    <!-- Formulario de Edición -->
    <div class="card shadow-lg">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="NuevoMedicamento.Id" />

                <div class="mb-3">
                    <label asp-for="NuevoMedicamento.TipoMedicamento" class="form-label">Tipo de Medicamento</label>
                    <input asp-for="NuevoMedicamento.TipoMedicamento" class="form-control" required />
                    <span asp-validation-for="NuevoMedicamento.TipoMedicamento" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-2"></i> Actualizar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-2"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


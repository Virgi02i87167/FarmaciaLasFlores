@model FarmaciaLasFlores.Models.Productos

@{
    ViewData["Title"] = "Eliminar Producto";
}

<style>
    body {
        background-color: #ede6e9;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #171d18;
        margin: 0;
    }

    h1, h3 {
        text-align: center;
    }

    h1 {
        color: #dc3545;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    h3 {
        color: #333;
        font-weight: 500;
        margin-bottom: 2rem;
    }

    .card {
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.08);
        padding: 1.5rem;
    }

    .row dt {
        font-weight: 600;
        color: #1b3488;
    }

    .row dd {
        color: #333;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #bb2d3b;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    form {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-bottom: 80px; /* Añadido para dar espacio entre los botones y el footer */
    }
</style>

<div class="container mt-5">
    <h1>Eliminar Producto</h1>
    <h3>¿Estás seguro de que deseas eliminar este producto?</h3>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Nombre</dt>
                        <dd class="col-sm-8">@Model.Nombre</dd>

                        <dt class="col-sm-4">Cantidad</dt>
                        <dd class="col-sm-8">@Model.Cantidad</dd>

                        <dt class="col-sm-4">Precio Compra</dt>
                        <dd class="col-sm-8">@Model.PrecioCompra.ToString("C", new System.Globalization.CultureInfo("es-SV"))</dd>

                        <dt class="col-sm-4">Precio Venta</dt>
                        <dd class="col-sm-8">@Model.PrecioVenta.ToString("C", new System.Globalization.CultureInfo("es-SV"))</dd>

                        <dt class="col-sm-4">Lote</dt>
                        <dd class="col-sm-8">@Model.Lote</dd>

                        <dt class="col-sm-4">Fecha Registro</dt>
                        <dd class="col-sm-8">@Model.FechaRegistro.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Fecha Vencimiento</dt>
                        <dd class="col-sm-8">@Model.FechaVencimiento.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Tipo Medicamento</dt>
                        <dd class="col-sm-8">@Model.Medicamentos?.TipoMedicamento</dd>

                        <dt class="col-sm-4">Estado</dt>
                        <dd class="col-sm-8">@(Model.Estado ? "Activo" : "Inactivo")</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Deleted" method="post" class="mt-4">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash me-2"></i> Confirmar Eliminación
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-2"></i> Cancelar
                </a>
            </form>
        </div>
    </div>
</div>